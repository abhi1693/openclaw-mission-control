ENVIRONMENT=dev
LOG_LEVEL=INFO
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/mission_control
REDIS_URL=redis://localhost:6379/0
CORS_ORIGINS=http://localhost:3000
BASE_URL=

# Auth mode: clerk (default), local_bearer, or disabled
# - clerk: Full Clerk authentication (requires CLERK_JWKS_URL)
# - local_bearer: Simple token auth for self-hosting (requires LOCAL_AUTH_TOKEN)
# - disabled: No authentication for local development only
AUTH_MODE=clerk
LOCAL_AUTH_TOKEN=

# Clerk (auth only; used when AUTH_MODE=clerk)
CLERK_JWKS_URL=
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
CLERK_API_URL=https://api.clerk.com
CLERK_VERIFY_IAT=true
CLERK_LEEWAY=10.0

# Database
DB_AUTO_MIGRATE=false
